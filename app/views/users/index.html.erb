<div id="listing">
  <% if @user.errors.any? %>
      <div class="alert alert-danger alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>

        <ul>
          <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
  <%end %>

  <div class="page-header">
    <%= link_to new_user_path,remote:true, class: 'btn btn-primary','data-toggle'=>"modal", 'data-target'=>"#new-user" do %>
        <span class="glyphicon glyphicon-plus"></span>
        New User
    <% end %>
    <h1>Listing users</h1>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>User type</th>
        <th colspan="2">Action</th>

      </tr>
      </thead>

      <tbody>


      <%= content_tag_for(:tr, @users) do |user| %>
          <td><%= user.name %></td>
          <td><%= user.status %></td>
          <td><%= user.usertype %>
          <td><%= link_to '<span class="glyphicon glyphicon-edit"></span>'.html_safe, edit_user_path(user),remote:true,'data-toggle'=>"modal", 'data-target'=>"#new-user" %> |
            <%= link_to '<span class="glyphicon glyphicon-remove"></span>'.html_safe, delete_user_path(user),remote:true,'data-toggle'=>"modal", 'data-target'=>"#new-user"  %></td>
      <% end %>


      </tbody>
    </table>
  </div>
</div>



<!--MODAL FOR NEW USER-->

<div class="modal fade " id="new-user" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"></div>
