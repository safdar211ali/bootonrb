

<div id="listing">

<div ng-app="myApp" ng-controller="myController">
  <h3> Json Users</h3>
  <a href="/users/new"  data-remote="true" data-target="#new-user" data-toggle="modal" >    <span class="glyphicon glyphicon-plus btn btn-primary pull-right">New User</span></a>
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>User type</th>
      <th>Actions</th>



    </tr>
    </thead>
    <tbody>


    <tr ng-repeat="user in users">
      <td>{{user.name}}</td>
      <td>{{user.status}}</td>
      <td>{{user.usertype}}</td>
      <td><a href="/users/{{user.id}}/edit "  data-remote="true" data-target="#new-user" data-toggle="modal" >    <span class="glyphicon glyphicon-edit"></span></a> |
        <a href="/users/{{user.id}}/delete "  data-remote="true" data-target="#new-user" data-toggle="modal" >    <span class="glyphicon glyphicon-remove"></span></a>


      </td>
      http://localhost:3000/jsonusers

    </tr>

    </tbody>
  </table>
</div>
  </div>

<script>


  var app = angular.module("myApp", []);
  app.controller('myController', function ($scope, $http) {
//    url =    'http://localhost:3000/jsonusers';
    url = 'http://bootonrb.herokuapp.com/jsonusers';
    $http.get(url).success(function (response) {
      $scope.users = response;

    });

  });


</script>







